---
import BaseLayout from './BaseLayout.astro';
import AdBanner from '../components/AdBanner.astro';
import { getLocaleFromUrl, getLocalizedPath, t } from '../i18n/utils';

interface Props {
  title: string;
  description: string;
  date: string;
  category: string;
  readingTime: string;
  relatedTools?: { name: string; href: string }[];
}

const locale = getLocaleFromUrl(Astro.url);
const { title, description, date, category, readingTime, relatedTools = [] } = Astro.props;

const blogIndexPath = getLocalizedPath('/blog', locale);
const homeLabel = locale === 'ja' ? 'ホーム' : 'Home';
const blogLabel = locale === 'ja' ? 'ブログ' : 'Blog';
const relatedToolsLabel = locale === 'ja' ? '関連ツール' : 'Related Tools';
const backToBlog = locale === 'ja' ? 'ブログ一覧に戻る' : 'Back to Blog';
const shareTitle = t(locale, 'share.title');
const siteUrl = Astro.site?.toString().replace(/\/$/, '') || 'https://openedfile.com';
const pageUrl = `${siteUrl}${Astro.url.pathname}`;

const breadcrumbs = [
  { name: homeLabel, href: getLocalizedPath('/', locale) },
  { name: blogLabel, href: blogIndexPath },
  { name: title, href: Astro.url.pathname },
];
---

<BaseLayout title={title} description={description} breadcrumbs={breadcrumbs}>
  <article class="mx-auto max-w-3xl px-4 py-12 sm:px-6 lg:px-8">
    <!-- Breadcrumb -->
    <nav class="mb-8 text-sm text-gray-500 dark:text-gray-400">
      <a href={getLocalizedPath('/', locale)} class="hover:text-primary-600 dark:hover:text-primary-400">OpenedFile</a>
      <span class="mx-2">/</span>
      <a href={blogIndexPath} class="hover:text-primary-600 dark:hover:text-primary-400">{blogLabel}</a>
      <span class="mx-2">/</span>
      <span class="text-gray-700 dark:text-gray-300">{category}</span>
    </nav>

    <!-- Article header -->
    <header class="mb-10">
      <div class="flex items-center gap-3 text-sm text-gray-500 dark:text-gray-400 mb-4">
        <time datetime={date}>{date}</time>
        <span>·</span>
        <span>{readingTime}</span>
      </div>
      <h1 class="text-3xl font-bold text-gray-900 dark:text-white sm:text-4xl leading-tight">
        {title}
      </h1>
      <p class="mt-4 text-lg text-gray-600 dark:text-gray-300">
        {description}
      </p>
    </header>

    <!-- Ad banner (after title) -->
    <div class="mb-10">
      <AdBanner slot="content" />
    </div>

    <!-- Article body -->
    <div class="prose prose-gray dark:prose-invert max-w-none
      prose-headings:font-semibold prose-headings:text-gray-900 dark:prose-headings:text-white
      prose-a:text-primary-600 dark:prose-a:text-primary-400 prose-a:no-underline hover:prose-a:underline
      prose-img:rounded-xl
      prose-strong:text-gray-900 dark:prose-strong:text-white
      prose-li:marker:text-gray-400">
      <slot />
    </div>

    <!-- Ad banner (after article) -->
    <div class="mt-10">
      <AdBanner slot="content" />
    </div>

    <!-- Share buttons -->
    <div class="mt-10 rounded-xl border border-gray-200 bg-gray-50 p-6 dark:border-gray-700 dark:bg-gray-800/60">
      <h2 class="mb-4 text-lg font-semibold text-gray-900 dark:text-white">{shareTitle}</h2>
      <div class="flex flex-wrap gap-3">
        <!-- X (Twitter) -->
        <a
          href={`https://twitter.com/intent/tweet?url=${encodeURIComponent(pageUrl)}&text=${encodeURIComponent(title)}`}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 rounded-lg border border-gray-200 bg-white px-4 py-2.5 text-sm font-medium text-gray-900 transition-colors hover:border-gray-400 hover:bg-gray-100 dark:border-gray-600 dark:bg-gray-700 dark:text-white dark:hover:border-gray-500 dark:hover:bg-gray-600"
          aria-label="Share on X"
        >
          <svg class="h-4 w-4" viewBox="0 0 24 24" fill="currentColor">
            <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
          </svg>
          X
        </a>
        <!-- Facebook -->
        <a
          href={`https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(pageUrl)}`}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 rounded-lg border border-gray-200 bg-white px-4 py-2.5 text-sm font-medium text-gray-900 transition-colors hover:border-blue-400 hover:bg-blue-50 dark:border-gray-600 dark:bg-gray-700 dark:text-white dark:hover:border-blue-500 dark:hover:bg-blue-950"
          aria-label="Share on Facebook"
        >
          <svg class="h-4 w-4 text-blue-600 dark:text-blue-400" viewBox="0 0 24 24" fill="currentColor">
            <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
          </svg>
          Facebook
        </a>
        <!-- LINE -->
        <a
          href={`https://social-plugins.line.me/lineit/share?url=${encodeURIComponent(pageUrl)}`}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 rounded-lg border border-gray-200 bg-white px-4 py-2.5 text-sm font-medium text-gray-900 transition-colors hover:border-green-400 hover:bg-green-50 dark:border-gray-600 dark:bg-gray-700 dark:text-white dark:hover:border-green-500 dark:hover:bg-green-950"
          aria-label="Share on LINE"
        >
          <svg class="h-4 w-4 text-green-500" viewBox="0 0 24 24" fill="currentColor">
            <path d="M19.365 9.863c.349 0 .63.285.63.631 0 .345-.281.63-.63.63H17.61v1.125h1.755c.349 0 .63.283.63.63 0 .344-.281.629-.63.629h-2.386c-.345 0-.627-.285-.627-.629V8.108c0-.345.282-.63.63-.63h2.386c.346 0 .627.285.627.63 0 .349-.281.63-.63.63H17.61v1.125h1.755zm-3.855 3.016c0 .27-.174.51-.432.596-.064.021-.133.031-.199.031-.211 0-.391-.09-.51-.25l-2.443-3.317v2.94c0 .344-.279.629-.631.629-.346 0-.626-.285-.626-.629V8.108c0-.27.173-.51.43-.595.06-.023.136-.033.194-.033.195 0 .375.104.495.254l2.462 3.33V8.108c0-.345.282-.63.63-.63.345 0 .63.285.63.63v4.771zm-5.741 0c0 .344-.282.629-.631.629-.345 0-.627-.285-.627-.629V8.108c0-.345.282-.63.63-.63.346 0 .628.285.628.63v4.771zm-2.466.629H4.917c-.345 0-.63-.285-.63-.629V8.108c0-.345.285-.63.63-.63.348 0 .63.285.63.63v4.141h1.756c.348 0 .629.283.629.63 0 .344-.282.629-.629.629M24 10.314C24 4.943 18.615.572 12 .572S0 4.943 0 10.314c0 4.811 4.27 8.842 10.035 9.608.391.082.923.258 1.058.59.12.301.079.766.038 1.08l-.164 1.02c-.045.301-.24 1.186 1.049.645 1.291-.539 6.916-4.078 9.436-6.975C23.176 14.393 24 12.458 24 10.314"/>
          </svg>
          LINE
        </a>
        <!-- Hatena Bookmark -->
        <a
          href={`https://b.hatena.ne.jp/add?mode=confirm&url=${encodeURIComponent(pageUrl)}&title=${encodeURIComponent(title)}`}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 rounded-lg border border-gray-200 bg-white px-4 py-2.5 text-sm font-medium text-gray-900 transition-colors hover:border-red-300 hover:bg-red-50 dark:border-gray-600 dark:bg-gray-700 dark:text-white dark:hover:border-red-500 dark:hover:bg-red-950"
          aria-label="Share on Hatena Bookmark"
        >
          <svg class="h-4 w-4 text-red-500" viewBox="0 0 24 24" fill="currentColor">
            <path d="M20.47 0C22.42 0 24 1.58 24 3.53v16.94c0 1.95-1.58 3.53-3.53 3.53H3.53C1.58 24 0 22.42 0 20.47V3.53C0 1.58 1.58 0 3.53 0h16.94zm-3.705 14.47c-.78 0-1.41.63-1.41 1.41s.63 1.414 1.41 1.414 1.41-.634 1.41-1.414-.63-1.41-1.41-1.41zm.255-4.418h-2.27v-1.715c0-.67-.28-1.01-.84-1.01-.39 0-.67.18-.84.54-.09.21-.12.51-.12.81v1.375h-2.27V8.122c0-.67-.27-1.01-.84-1.01-.42 0-.69.21-.84.63-.06.18-.09.42-.09.69v1.29H6.24V7.852c0-.67.18-1.2.54-1.59.39-.39.9-.585 1.53-.585.72 0 1.26.24 1.62.72.39-.48.93-.72 1.62-.72.63 0 1.14.195 1.53.585.36.39.54.92.54 1.59v1.38h.36c.54 0 .975.12 1.305.36.33.24.495.615.495 1.125 0 .54-.18.93-.54 1.17-.33.21-.78.315-1.35.315z"/>
          </svg>
          Hatena
        </a>
      </div>
    </div>

    <!-- Related tools -->
    {relatedTools.length > 0 && (
      <div class="mt-12 rounded-xl border border-gray-200 bg-gray-50 p-6 dark:border-gray-700 dark:bg-gray-800/60">
        <h2 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">{relatedToolsLabel}</h2>
        <div class="flex flex-wrap gap-3">
          {relatedTools.map((tool) => (
            <a
              href={tool.href}
              class="inline-flex items-center gap-2 rounded-lg border border-gray-200 bg-white px-4 py-2.5 text-sm font-medium text-gray-900 hover:border-primary-300 hover:bg-primary-50 dark:border-gray-600 dark:bg-gray-700 dark:text-white dark:hover:border-primary-500 dark:hover:bg-primary-950 transition-colors"
            >
              <svg class="h-4 w-4 text-primary-600 dark:text-primary-400" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                <path d="M15 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V7Z"></path>
                <path d="M14 2v4a2 2 0 0 0 2 2h4"></path>
                <path d="m9 15 2 2 4-4"></path>
              </svg>
              {tool.name}
            </a>
          ))}
        </div>
      </div>
    )}

    <!-- Back to blog -->
    <div class="mt-10">
      <a
        href={blogIndexPath}
        class="inline-flex items-center gap-2 text-sm font-medium text-primary-600 hover:text-primary-700 dark:text-primary-400 dark:hover:text-primary-300"
      >
        <svg class="h-4 w-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
          <path d="m15 18-6-6 6-6"></path>
        </svg>
        {backToBlog}
      </a>
    </div>
  </article>
</BaseLayout>
