---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { getLocaleFromUrl, getAlternateLocaleUrl, locales, defaultLocale, t } from '../i18n/utils';
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
  ogImage?: string;
  breadcrumbs?: { name: string; href: string }[];
}

const locale = getLocaleFromUrl(Astro.url);
const {
  title = t(locale, 'site.title'),
  description = t(locale, 'site.description'),
  ogImage = '/og/default.png',
  breadcrumbs = [],
} = Astro.props;

const siteUrl = Astro.site?.toString().replace(/\/$/, '') || 'https://openedfile.com';

// BreadcrumbList schema
const breadcrumbSchema = breadcrumbs.length > 0 ? {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": breadcrumbs.map((item, i) => ({
    "@type": "ListItem",
    "position": i + 1,
    "name": item.name,
    "item": `${siteUrl}${item.href}`,
  })),
} : null;

const canonicalUrl = new URL(Astro.url.pathname, Astro.site);
---

<!doctype html>
<html lang={locale} class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />

    <!-- SEO -->
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalUrl} />

    <!-- hreflang -->
    {locales.map((loc) => {
      const href = new URL(getAlternateLocaleUrl(Astro.url, loc), Astro.site);
      return <link rel="alternate" hreflang={loc} href={href.toString()} />;
    })}
    <link
      rel="alternate"
      hreflang="x-default"
      href={new URL(getAlternateLocaleUrl(Astro.url, defaultLocale), Astro.site).toString()}
    />

    <!-- OGP -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:image" content={new URL(ogImage, Astro.site)} />
    <meta property="og:locale" content={locale} />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" href="/favicon.ico" />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Noto+Sans+JP:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />

    <!-- Google Analytics (GA4) -->
    <script is:inline async src="https://www.googletagmanager.com/gtag/js?id=G-3DQ439LCJZ"></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'G-3DQ439LCJZ');
    </script>

    <!-- Structured Data -->
    {breadcrumbSchema && (
      <script type="application/ld+json" set:html={JSON.stringify(breadcrumbSchema)} />
    )}
    <slot name="structured-data" />

    <!-- Theme initialization (prevent flash) -->
    <script is:inline>
      (function() {
        var theme = localStorage.getItem('theme');
        if (theme === 'dark') {
          document.documentElement.classList.add('dark');
        }
      })();
    </script>
  </head>
  <body class="min-h-screen flex flex-col bg-white text-gray-900 dark:bg-gray-950 dark:text-gray-100 font-sans antialiased">
    <Header />
    <main class="flex-1">
      <slot />
    </main>
    <Footer />
  </body>
</html>
