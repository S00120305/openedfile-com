        <a
          href={`/ja/blog/${article.slug}`}
          class="group rounded-xl border border-gray-200 bg-white p-6 hover:border-primary-300 hover:shadow-md dark:border-gray-700 dark:bg-gray-800/60 dark:hover:border-primary-600 transition-all"
