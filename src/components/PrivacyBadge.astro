---
import { getLocaleFromUrl, t } from '../i18n/utils';

const locale = getLocaleFromUrl(Astro.url);
const text = t(locale, 'privacy_badge.text');
---

<div class="inline-flex items-start gap-3 rounded-xl bg-green-50 border border-green-200 px-5 py-3 dark:bg-green-950/60 dark:border-green-800/60">
  <!-- Shield check icon -->
  <div class="flex shrink-0 items-center justify-center w-8 h-8 rounded-lg bg-green-100 dark:bg-green-900/60">
    <svg
      aria-hidden="true"
      class="w-5 h-5 text-green-600 dark:text-green-400"
      fill="none"
      stroke="currentColor"
      stroke-width="2"
      viewBox="0 0 24 24"
    >
      <path d="M20 13c0 5-3.5 7.5-7.66 8.95a1 1 0 0 1-.67-.01C7.5 20.5 4 18 4 13V6a1 1 0 0 1 1-1c2 0 4.5-1.2 6.24-2.72a1.17 1.17 0 0 1 1.52 0C14.51 3.81 17 5 19 5a1 1 0 0 1 1 1z"></path>
      <path d="m9 12 2 2 4-4"></path>
    </svg>
  </div>
  <p class="text-sm font-medium text-green-800 dark:text-green-300 leading-relaxed">
    {text}
  </p>
</div>
