---
import { getLocaleFromUrl, t } from '../i18n/utils';

const locale = getLocaleFromUrl(Astro.url);
const text = t(locale, 'privacy_badge.text');
const tooltip = t(locale, 'privacy_badge.tooltip');
---

<div
  class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-green-50 text-green-700 border border-green-200 dark:bg-green-950 dark:text-green-300 dark:border-green-800 text-sm font-medium"
  title={tooltip}
>
  <!-- Shield check icon -->
  <svg
    class="w-4 h-4 shrink-0"
    fill="none"
    stroke="currentColor"
    stroke-width="2"
    viewBox="0 0 24 24"
  >
    <path d="M20 13c0 5-3.5 7.5-7.66 8.95a1 1 0 0 1-.67-.01C7.5 20.5 4 18 4 13V6a1 1 0 0 1 1-1c2 0 4.5-1.2 6.24-2.72a1.17 1.17 0 0 1 1.52 0C14.51 3.81 17 5 19 5a1 1 0 0 1 1 1z"></path>
    <path d="m9 12 2 2 4-4"></path>
  </svg>
  <span>{text}</span>
</div>
